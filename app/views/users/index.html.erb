    <% provide(:title, "Users") %>
<h1>All the Users </h1>
    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
<% @users.each do |user| %>
        <tr>
        <td> <%= user.id %></td>
        <td> <%=  user.name  %>  </td>
        <td><%= user.email %></td>
        </tr>
<% end %>
    </table>

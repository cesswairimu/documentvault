<div class="row">
<h1>Login Here</h1>
<%= form_for(:login, url: login_path)  do |f| %>
    <div class="small-4">
    <%= f.label :name, placeholder: "name" %>
    <%= f.text_field :name %>    </div>
    <div class="small-4">
    <%= f.label :password, placeholder: "password" %>
    <%= f.password_field :password %>
    <%=  link_to "(forgot password)", new_password_reset_path %>
    </div>
    <div class="small-4">
    <%= f.label :remember do  %>
        <%= f.check_box :Remember %> 
        <span> Remember me here </span>
    <% end %>
    </div>

    <%= f.submit "Login"%> 

    <p> You new here???  <%= link_to "Join now!", join_path %></p>
<% end %>
</div>
